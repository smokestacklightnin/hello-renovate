{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "allowedVersions": "<3.0",
      "matchPackageNames": [
        "hashicorp/google"
      ]
    },
    {
      "allowedVersions": "<=1.0",
      "matchPackageNames": [
        "hashicorp/terraform"
      ]
    },
    {
      "allowedVersions": "<2.0",
      "matchPackageNames": [
        "hashicorp/kubernetes"
      ]
    },
    {
      "allowedVersions": "<2.0",
      "matchPackageNames": [
        "hashicorp/helm"
      ]
    }
  ]
}
